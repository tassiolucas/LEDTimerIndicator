<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@color/colorPrimaryDark"
>

    <SeekBar
        android:id="@+id/led_size_selector"
        android:layout_width="@dimen/seek_bar_width"
        android:layout_height="@dimen/seek_bar_height"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="@dimen/led_size_selector_margin"
        android:layout_marginLeft="@dimen/led_size_selector_margin"
        android:layout_marginEnd="@dimen/led_size_selector_margin"
        android:layout_marginRight="@dimen/led_size_selector_margin"
    />

</android.support.constraint.ConstraintLayout>