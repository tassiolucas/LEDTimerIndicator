<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:background="@color/colorPrimaryDark">

    <com.example.ledtimerindicator.CustomViews.LedIndicatorView
            android:id="@+id/first_led_view"
            android:layout_width="85dp"
            android:layout_height="150dp"
            android:backgroundTint="@color/colorPrimaryDark"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
    />

    <com.example.ledtimerindicator.CustomViews.TimerInputEditText
            android:id="@+id/timer_imput"
            android:layout_width="@dimen/timer_imput_width"
            android:layout_height="wrap_content"
            android:textColorHint="@color/hint_imput"
            android:backgroundTint="@color/white"
            android:textAlignment="textEnd"
            android:gravity="end"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:inputType="number"
            android:hint="@string/timer_input_hint"
            android:maxLength="3"
            android:focusedByDefault="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            tools:text="129"
    />

    <Button
            android:id="@+id/ok_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ok_button"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:background="@drawable/button_ripple_effect"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/timer_imput" tools:targetApi="lollipop"
    />

</android.support.constraint.ConstraintLayout>